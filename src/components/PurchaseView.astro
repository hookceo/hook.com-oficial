---

interface Props {
	productname: string;
	href: string;
	backgroundimage: String;
}

const { productname, href, backgroundimage } = Astro.props;
---

<div class="ex">

	<div class="bottom-align">
		
		<div class="nova-description">

			<div class="text-app">
				<div class="flex-bottom">

				<h1 class="app-title">{productname}</h1>
		
  				<path
   				 d="M10.5253 5.49475L10.5206 7.49475L15.0782 7.50541L5.47473 17.0896L6.88752 18.5052L16.5173 8.89479L16.5065 13.5088L18.5065 13.5134L18.5253 5.51345L10.5253 5.49475Z"
  				  fill="rgba(144, 144, 144, 0.74)"
  />
</svg>

		</div>
        <div class="buttons">
        <a href={href}>
            <h3 class="buy">Purchase</h3>
            
	</a>
        <a href="">
            <h3>Learn about</h3>
        </a>
    </div>

	</div>
        </div>
</div>

<style  define:vars={{ image: `url("${backgroundimage}")` }}>
	
	.boxes {
		display: grid;
		grid-template-columns: 1fr 1fr;
		row-gap: 10px;
		column-gap: 10px;

	}



    h3 {
        color: white;
        font-weight: 400;
        text-decoration: underline;
        font-size: 12px;
    }

    .buttons {
        display: flex;
        gap: 20px;
        margin-right: 15px;
    }
    .text-app {
        display: flex;

        align-items: center;
        gap: 50px;
    }

	.flex-bottom {
		display: flex;
		justify-content: space-between;
	}

	.ex {
		background-color: rgb(255, 255, 255);
    height: 320px;
    background-image: var(--image);
    background-size: cover;
    background-position: center; 
    background-repeat: no-repeat;
	position: relative;

		
	}

	.nova-iconn {
        position: absolute; /* Para posicionar la imagen absolutamente dentro del contenedor */
        width: 100%; /* Ocupa el 100% del ancho del contenedor */
        height: 100%; /* Ocupa el 100% del alto del contenedor */
        top: 0; /* Coloca la imagen en la parte superior del contenedor */
        left: 0; /* Coloca la imagen en la parte izquierda del contenedor */
		object-fit: cover;
    }
	.nova-icon {
		height: 40px;
		width: 40px;
		margin: 0px;
		border-radius: 12px;
		border: 1px solid gray;

	}

	.app-title {
		color: rgb(255, 255, 255);
		font-size: 25px;
        font-weight: 500;
        font-family: 'SF Pro Display', sans-serif;
		margin: 0px;


	}
	.ex {
    display: flex;
    align-items: end;
	padding: 30px;

	}

	a{
		text-decoration: none;
	}
	.text-app {
		margin-left: 10px;
		
	}

	.app-subtitle {
		color: rgb(75, 75, 75);
		font-family: 'SF Pro Display', sans-serif;
		font-weight: 400;
		font-size: 13px;
		margin: 0px;
		overflow: hidden;
   		display: -webkit-box;
   		-webkit-line-clamp: 1; /* number of lines to show */
        line-clamp: 1; 
   		-webkit-box-orient: vertical;
		mix-blend-mode: hard-light;
        align-items: center;
	}

	.nova-description {
		display: flex;
		justify-content: center;
		align-items: center;

		backdrop-filter: blur(25px);
		padding: 10px;
		border-radius: 20px;
		transalte3d(0,0,0);
		transition: all 0.3s ease 0s;
		border: 2px solid rgba(246, 246, 246, 0.047);
	}



</style>

